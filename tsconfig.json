{
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": true,
    "module": "ES2015",
    "noImplicitAny": false,
    "removeComments": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "target": "es5",
    "outDir": "./lib",
    "moduleResolution": "node",
    "allowJs": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
