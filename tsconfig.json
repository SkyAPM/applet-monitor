{
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": true,
    "module": "ES2015",
    "noImplicitAny": false,
    "removeComments": true,
    "paths": {
      "@": ["./src"]
    },
    "target": "ESNext",
    "outDir": "./lib",
    "declaration": true,
    "declarationDir": "./lib/types",
    "allowJs": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
